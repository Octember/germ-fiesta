extends layout

block content

    body
        canvas#gameCanvas
        script(src="#{URLs.socketURL}/socket.io/socket.io.js")
        script(src="javascripts/requestAnimationFrame.js")
        script(src="javascripts/Keys.js")
        script(src="javascripts/Player.js")
        script(src="javascripts/game.js")
        script(src="javascripts/paper-full.min.js")

        script(type='text/javascript').
            init()
            animate()

        script(type='text/paperscript', canvas="gameCanvas").
            // Create a Paper.js Path to draw a line into it:
            var path = new Path();
            // Give the stroke a color
            path.strokeColor = 'black';
            var start = new Point(100, 100);
            // Move to start and draw a line from there
            path.moveTo(start);
            // Note the plus operator on Point objects.
            // PaperScript does that for us, and much more!
            path.lineTo(start + [ 100, -50 ]);
